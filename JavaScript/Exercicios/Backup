class Cliente{
  constructor(nome, cpf){
    this.nome = nome;
    this.cpf = cpf;
  }
};

class Restaurante{
  constructor(nome, endereco, mesas, reservas) {
    this.nome = "CocoBambu";
    this.endereco = "Avenida Kennedy, 700 Bairro Jardim do Mar, São Bernardo do Campo";
    this.mesas = 20;
    this.reservas = reservas;
  }
};

class Mesa{
  constructor(numero, capacidade, local) {
    this.numero = numero;
    this.capacidade = capacidade;
    this.local = localMesa;
  }
  
  verificarLocal() {
    if(this.localMesa === Salao || Jardim){
      this.localMesa = localMesa;
      console.log(`Local da mesa : ${localMesa}`);
    } else {
      return("Nao temos esse local no nosso restaurante");
    }
  }
};

//criando a rerserva
let reservando = [
   new Reserva((luiz, 1), )
  ]

class Reserva {
  constructor(Cliente, Restaurante, Mesa, qtdPessoas, localPreferencia, periodo, status){
    this.Cliente = (Cliente);
    this.Restaurante = (Restaurante);
    this.Mesa = (Mesa);
    this.qtdPessoas = qtdPessoas;
    this.localPreferencia = (mesa.localMesa);
    this.periodo = periodo;
    this.status = status;
  }
  
    verificarPeriodo() {
    if(this.periodo === manha || tarde || noite){
      this.periodo = periodo;
      console.log(`Periodo da reserva: ${periodo}`);
    } else {
      return("Só podemos criar a sua reserva no perido da manha, tarde ou noite");
    }
  }
  
};

